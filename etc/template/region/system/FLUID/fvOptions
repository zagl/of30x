FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "./system/includeDict"

temperatureLimit
{
    active          on;
    type            limitTemperature;
    limitTemperatureCoeffs
    {
        selectionMode   all;
        Tmin            $:config.temperature.min;
        Tmax            $:config.temperature.max;
    }
}

$:config.fvOptions.FLUID

#remove config;
